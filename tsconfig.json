{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node",     
    "resolveJsonModule": true,
    "paths": {
      "@app/*": ["src/app/*"],
      "src/common/*": ["src/common/*"],
      "@configs/*": ["src/configs/*"],
      "@health/*": ["src/health/*"],
      "@jobs/*": ["src/jobs/*"],
      "@languages/*": ["src/languages/*"],
      "@message/*": ["src/message/*"],
      "@modules/*": ["src/modules/*"],
    },
  },
  "include": [
    "src",
    "test",
  ],
  "exclude": [
    "node_modules",
    "dist", 
    "*coverage",
    "logs",
    "data"
  ]
}
